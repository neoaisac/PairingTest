@model PairingTest.Web.Models.QuestionnaireViewModel

@{
    <h1>@Model.QuestionnaireTitle</h1>
    @Html.HiddenFor(x => x.QuestionnaireTitle)

    using (Html.BeginForm())
    {
        <div>
            @if (Model.QuestionsText != null)
            {
                for (int i = 0; i < Model.QuestionsText.Count; i++)
                {
                    <div>
                        <p><strong>@Html.DisplayFor(x => x.QuestionsText[i])</strong></p>
                        @Html.HiddenFor(x => x.QuestionsText[i])

                        <p>@Html.EditorFor(x => x.AnswersText[i])</p>
                    </div>
                }
            }
            <input type="submit" class="btn btn-default" />
        </div>
    }
}